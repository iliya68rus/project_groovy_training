pipeline {
    agent any

    stages {
        stage('PrintSysTime') {
            steps {
                echo "branch name: ${branch}"
                def now = java.time.LocalDateTime.now()
                def time = now.format(java.time.format.DateTimeFormatter.ofPattern("HH:mm:ss dd.MM.yyyy"))
                echo "time: ${time}"
            }
        }
        stage('Hello') {
            steps {
                echo 'Hello World from git'
            }
        }
    }
}